{
  "name": "typescript-nextjs-starter",
  "description": "A TypeScript starter for Next.js that includes all you need to build amazing projects",
  "version": "1.0.0",
  "private": true,
  "author": "Jo√£o Pedro Schmitz <hey@joaopedro.dev> (@jpedroschmitz)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "predev": "yarn run generate",
    "dev": "next",
    "dev:ts": "yarn dev & yarn ts:watch",
    "ts": "tsc --noEmit --incremental",
    "ts:watch": "yarn ts --watch",
    "prebuild": "yarn run generate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "prisma": {
    "schema": "modules/prisma/schema.prisma",
    "seed": "ts-node ./modules/prisma/seed.ts"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "3.6.6",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@prisma/client": "3.14.0",
    "apollo-server-micro": "3.8.2",
    "deepmerge": "4.2.2",
    "esbuild": "0.14.42",
    "graphql": "16.5.0",
    "jss-global": "3.0.0",
    "lodash": "4.17.21",
    "micro": "9.3.4",
    "micro-cors": "0.1.1",
    "next": "12.1.6",
    "nexus": "1.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-jss": "10.9.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.5.0",
    "@graphql-codegen/typescript-operations": "2.4.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.15",
    "@types/lodash": "4.14.182",
    "@types/micro-cors": "0.1.2",
    "@types/node": "17.0.40",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.0",
    "prettier": "2.6.2",
    "prisma": "3.15.0",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
